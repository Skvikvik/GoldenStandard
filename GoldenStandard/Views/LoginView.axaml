<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:GoldenStandard.ViewModels"
             x:Class="GoldenStandard.Views.LoginView"
             x:DataType="vm:LoginViewModel">
	<StackPanel Margin="30" VerticalAlignment="Center" Spacing="15">
		<TextBlock Text="ВХОД" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
		<TextBox Watermark="Email" Text="{Binding Email}"/>
		<TextBox Watermark="Пароль" PasswordChar="*" Text="{Binding Password}"/>
		<Button Content="ВОЙТИ" Command="{Binding LoginCommand}" Background="#FFD700" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Height="45"/>
		<Button Content="Регистрация" Command="{Binding GoToRegister}" Background="Transparent" HorizontalAlignment="Center"/>
	</StackPanel>
</UserControl>