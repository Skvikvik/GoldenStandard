<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:GoldenStandard.ViewModels"
             x:Class="GoldenStandard.Views.EditProductView"
             x:DataType="vm:EditProductViewModel">

	<ScrollViewer Background="#F5F5F5">
		<StackPanel Margin="20" Spacing="15">
			<TextBlock Text="Редактирование товара" FontSize="20" FontWeight="Bold" Foreground="#3A3A3A"/>

			<Border Background="White" CornerRadius="8" Padding="20" BoxShadow="0 2 5 0 #15000000">
				<StackPanel Spacing="10">
					<TextBlock Text="Название" FontWeight="SemiBold"/>
					<TextBox Text="{Binding Name}" Watermark="Введите название..."/>

					<TextBlock Text="Цена (₽)" FontWeight="SemiBold"/>
					<NumericUpDown Value="{Binding Price}" Minimum="0" Increment="10" FormatString="0"/>

					<TextBlock Text="Описание" FontWeight="SemiBold"/>
					<TextBox Text="{Binding Description}"
                             Watermark="Опишите товар..."
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="100"/>

					<TextBlock Text="Состав" FontWeight="SemiBold"/>
					<TextBox Text="{Binding Composition}"
                             Watermark="Укажите состав..."
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="80"/>

					<StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
						<Button Command="{Binding SaveCommand}"
                                Content="Сохранить изменения"
                                Background="Goldenrod" Foreground="White" Padding="20,10"/>

						<Button Command="{Binding CancelCommand}"
                                Content="Отмена"
                                Background="Transparent" BorderBrush="#CCCCCC" BorderThickness="1" Padding="20,10"/>
					</StackPanel>
				</StackPanel>
			</Border>
		</StackPanel>
	</ScrollViewer>
</UserControl>