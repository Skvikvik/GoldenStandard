<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:GoldenStandard.ViewModels"
             x:Class="GoldenStandard.Views.ProfileView"
             x:DataType="vm:ProfileViewModel">

	<Grid RowDefinitions="Auto, *">
		<Border Grid.Row="0" Background="#3A3A3A" Padding="10">
			<Grid>
				<Button HorizontalAlignment="Left"
                        Background="Transparent"
                        Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).ShowMainList}">
					<StackPanel Orientation="Horizontal" Spacing="5">
						<TextBlock Text="←" Foreground="White" FontSize="20"/>
						<TextBlock Text="Назад" Foreground="White" VerticalAlignment="Center"/>
					</StackPanel>
				</Button>

				<TextBlock Text="ПРОФИЛЬ"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"/>
			</Grid>
		</Border>

		<ScrollViewer Grid.Row="1">
			<StackPanel Margin="20" Spacing="15">
				<Label Content="Логин (Username):" FontSize="12" Foreground="Gray"/>
				<TextBox Text="{Binding Username}" IsReadOnly="True" Background="#F0F0F0"/>

				<Label Content="Публичное имя:" FontSize="12" Foreground="Gray"/>
				<TextBox Text="{Binding DisplayName, Mode=TwoWay}" Watermark="Введите имя"/>

				<Label Content="Email:" FontSize="12" Foreground="Gray"/>
				<TextBox Text="{Binding Email, Mode=TwoWay}" Watermark="example@mail.com"/>

				<Label Content="О себе:" FontSize="12" Foreground="Gray"/>
				<TextBox Text="{Binding Description, Mode=TwoWay}"
                         Height="100"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"/>

				<TextBlock Text="{Binding StatusMessage}"
                           Foreground="Green"
                           HorizontalAlignment="Center"
                           FontSize="12"
                           FontWeight="Medium"/>

				<Button Content="СОХРАНИТЬ ИЗМЕНЕНИЯ"
                        Command="{Binding SaveCommand}"
                        Background="#FFD700"
                        Foreground="#3A3A3A"
                        FontWeight="Bold"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Height="45"
                        CornerRadius="5"/>

				<Button Content="ВЫЙТИ ИЗ АККАУНТА"
                        Command="{Binding LogoutCommand}"
                        Background="Transparent"
                        Foreground="Red"
                        BorderBrush="Red"
                        BorderThickness="1"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Margin="0,20,0,0"
                        CornerRadius="5"/>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</UserControl>