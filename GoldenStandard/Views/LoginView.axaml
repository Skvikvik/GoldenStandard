<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:GoldenStandard.ViewModels"
             x:Class="GoldenStandard.Views.LoginView"
             x:DataType="vm:LoginViewModel">

	<StackPanel Margin="30" VerticalAlignment="Center" Spacing="15">
		<TextBlock Text="ВХОД"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>

		<TextBox Watermark="Введите логин"
                 Text="{Binding Username}"/>

		<TextBox Watermark="Пароль"
                 PasswordChar="*"
                 Text="{Binding Password}"/>

		<TextBlock Text="{Binding ErrorMessage}"
                   Foreground="#E74C3C"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

		<Button Content="ВОЙТИ"
                Command="{Binding LoginCommand}"
                Background="#FFD700"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Height="45"/>

		<Button Content="Регистрация"
                Command="{Binding GoToRegister}"
                Background="Transparent"
                HorizontalAlignment="Center"/>
	</StackPanel>
</UserControl>